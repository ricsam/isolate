{
  "name": "@ricsam/isolate-monorepo-root",
  "private": true,
  "type": "module",
  "description": "Utilities for isolated-vm - run JavaScript in a sandboxed V8 environment with web-standard APIs",
  "author": "Richard Samuelsson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ricsam/isolate.git"
  },
  "bugs": {
    "url": "https://github.com/ricsam/isolate/issues"
  },
  "homepage": "https://github.com/ricsam/isolate#readme",
  "keywords": [
    "isolated-vm",
    "sandbox",
    "javascript",
    "runtime",
    "fetch",
    "filesystem",
    "streams",
    "v8",
    "isolate"
  ],
  "workspaces": [
    "packages/*",
    "demo",
    "bun-demo"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:npm": "bun scripts/build.ts",
    "test": "node --test '**/*.test.ts' --test-force-exit --test-reporter spec --test-reporter-destination stdout",
    "typecheck": "tsc --noEmit",
    "test-bun-import": "bun run bun-demo/index.ts"
  },
  "devDependencies": {
    "@changesets/cli": "latest",
    "@types/node": "^24",
    "typescript": "^5"
  }
}
